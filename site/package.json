{
  "name": "basalt-design-system-site",
  "description": "Basalt Design System Site",
  "version": "1.0.0",
  "author": "Basalt",
  "dependencies": {
    "@basalt/demo-data": "0.1.1",
    "@basalt/twig-renderer": "0.8.0",
    "apidoc": "0.17.6",
    "body-parser": "1.18.3",
    "classnames": "2.2.6",
    "express": "4.16.3",
    "gatsby": "next",
    "gatsby-cli": "next",
    "gatsby-link": "^1.6.40",
    "gatsby-plugin-catch-links": "^1.0.24",
    "gatsby-plugin-react-helmet": "^2.0.10",
    "gatsby-source-filesystem": "^1.5.39",
    "gatsby-transformer-remark": "^1.7.44",
    "nodemon": "1.18.3",
    "react-helmet": "^5.2.0",
    "react-jsonschema-form": "1.0.3",
    "react-table": "6.8.6"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build:gatsby": "gatsby build",
    "build:apidoc": "apidoc --input api/ --output public2/apidoc/ --file-filters '.js' --file-filters '.jsx' ",
    "postinstall": "composer install",
    "build": "npm-run-all --serial build:gatsby build:apidoc",
    "start": "npm-run-all --print-label --parallel watch:server watch:gatsby",
    "lint": "eslint --ext .js,.jsx .",
    "lint:fix": "eslint --ext .js,.jsx . --fix",
    "test": "npm run lint",
    "watch:gatsby": "gatsby develop",
    "watch:server": "nodemon --watch server.js --watch api/ --exec 'npm run build:apidoc && npm run serve' ",
    "serve": "babel-node server.js --presets env"
  },
  "devDependencies": {
    "npm-run-all": "4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/basaltinc/our-design-system"
  }
}
