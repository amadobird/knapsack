{
  "name": "basalt-design-system-site",
  "description": "Basalt Design System Site",
  "version": "1.0.0",
  "author": "Basalt",
  "scripts": {
    "build:webpack": "NODE_ENV=production wp --run-prod",
    "build:apidoc": "apidoc --input api/ --output public2/apidoc/ --file-filters '.js' --file-filters '.jsx' ",
    "build:jsdoc": "jsdoc --configure jsdoc.json --recurse --destination public2/jsdoc",
    "build": "FORCE_COLOR=1 run-p --print-label build:*",
    "clean": "rm -rf public public2 .cache",
    "start": "run-p --print-label watch:*",
    "watch:twig": "nodemon --watch ../pattern-lab/source/_patterns/ --ext twig,json,js --exec 'echo \"restarting twig render server to clear twig cache...\" && touch server.js' ",
    "watch:webpack": "wp --watch --run-dev",
    "watch:jsdoc": "nodemon --watch utils/ --watch data/ --exec 'yarn run build:jsdoc'",
    "watch:server": "nodemon --watch server.js --watch api/ --watch data/ --exec 'run-p build:apidoc serve' ",
    "serve": "babel-node --config-file ./.babelrc server.js",
    "wp": "wp"
  },
  "dependencies": {
    "@babel/core": "7.0.0-rc.1",
    "@babel/node": "7.0.0-rc.1",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-rc.1",
    "@babel/preset-env": "7.0.0-rc.1",
    "@babel/preset-react": "7.0.0-rc.1",
    "@babel/register": "7.0.0-rc.1",
    "@basalt/twig-renderer": "0.9.0",
    "ajv": "6.5.2",
    "apidoc": "0.17.6",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-transform-react-remove-prop-types": "0.4.14",
    "body-parser": "1.18.3",
    "classnames": "2.2.6",
    "color": "3.0.0",
    "css-loader": "1.0.0",
    "express": "4.16.3",
    "globby": "8.0.1",
    "jsdoc": "3.5.5",
    "npm-run-all": "4.1.3",
    "pretty": "2.0.0",
    "query-string": "6.1.0",
    "react-copy-to-clipboard": "5.0.1",
    "react-helmet": "^5.2.0",
    "react-jsonschema-form": "1.0.3",
    "react-loadable": "5.5.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-table": "6.8.6",
    "style-loader": "0.22.1",
    "styled-components": "3.3.3",
    "url-loader": "1.0.1",
    "webpack": "4.16.5",
    "webpack-command": "0.4.1"
  },
  "devDependencies": {
    "nodemon": "1.18.3"
  },
  "keywords": [
    "design-system",
    "basalt"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/basaltinc/our-design-system"
  }
}
