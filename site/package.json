{
  "name": "basalt-design-system-site",
  "description": "Basalt Design System Site",
  "version": "1.0.0",
  "author": "Basalt",
  "dependencies": {
    "@basalt/demo-data": "^0.3.0",
    "@basalt/twig-renderer": "0.9.0",
    "apidoc": "0.17.6",
    "body-parser": "1.18.3",
    "classnames": "2.2.6",
    "color": "3.0.0",
    "express": "4.16.3",
    "gatsby": "2.0.0-beta.83",
    "gatsby-plugin-catch-links": "^1.0.24",
    "gatsby-plugin-react-helmet": "^2.0.10",
    "gatsby-source-filesystem": "^1.5.39",
    "gatsby-transformer-remark": "^1.7.44",
    "jsdoc": "3.5.5",
    "nodemon": "1.18.3",
    "pretty": "2.0.0",
    "react-helmet": "^5.2.0",
    "react-jsonschema-form": "1.0.3",
    "react-table": "6.8.6",
    "styled-components": "3.3.3"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build:gatsby": "gatsby build",
    "build:apidoc": "apidoc --input api/ --output public2/apidoc/ --file-filters '.js' --file-filters '.jsx' ",
    "build:jsdoc": "jsdoc --configure jsdoc.json --recurse --destination public2/jsdoc",
    "build:images": "cp -r ../images public2/",
    "postinstall": "composer install",
    "build": "npm-run-all --serial build:*",
    "start": "npm-run-all --print-label --parallel watch:*",
    "lint": "eslint --ext .js,.jsx .",
    "lint:fix": "eslint --ext .js,.jsx . --fix",
    "test": "yarn run lint",
    "watch:twig": "nodemon --watch ../pattern-lab/source/_patterns/ --ext twig --exec 'touch server.js' ",
    "watch:gatsby": "gatsby develop",
    "watch:jsdoc": "nodemon --watch utils/ --watch data/ --exec 'yarn run build:jsdoc'",
    "watch:server": "nodemon --watch server.js --watch api/ --watch data/ --exec 'npm-run-all --parallel build:apidoc serve' ",
    "serve": "babel-node server.js --presets env"
  },
  "devDependencies": {
    "npm-run-all": "4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/basaltinc/our-design-system"
  }
}
