{
  "name": "@basalt/crux-site",
  "description": "Basalt Design System Site",
  "version": "1.0.2",
  "author": "Basalt",
  "scripts": {
    "build:webpack": "NODE_ENV=production wp --run-prod",
    "build:apidoc": "apidoc --input server/ --output public2/apidoc/ --file-filters '.js' --file-filters '.jsx' ",
    "build:jsdoc": "jsdoc --configure jsdoc.json --recurse --destination public2/jsdoc",
    "build": "FORCE_COLOR=1 run-p --print-label build:*",
    "clean": "rm -rf public public2 .cache",
    "fix": "yarn run lint:fix",
    "jest": "jest",
    "lint": "eslint --ext .js,.jsx .",
    "lint:fix": "yarn run lint --fix",
    "lint:staged": "lint-staged",
    "start": "DEV_MODE=yes FORCE_COLOR=1 run-p --print-label watch:* serve:webpack",
    "test": "yarn run lint && jest",
    "uuid": "node -e \"process.stdout.write(require('uuid/v4')()) \" | pbcopy && echo 'uuid copied' ",
    "Xwatch:webpack": "wp --watch --run-dev",
    "watch:server": "nodemon --watch server/ --exec 'yarn serve' ",
    "serve:webpack": "webpack-dev-server --info=false",
    "serve": "babel-node --config-file ./.babelrc server/index.js",
    "wp": "wp"
  },
