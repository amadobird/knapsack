{
  "files": [],
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "esnext", "es7"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "composite": false,
    "listEmittedFiles": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@basalt/knapsack": ["./knapsack/src"],
      "@knapsack/design-system": ["./design-system/src"],
      "@knapsack/*": [
        "packages/*/src",
        "packages/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/node_modules",
    "**/*.test.js"
  ]
}
