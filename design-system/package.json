{
  "name": "@knapsack/design-system",
  "version": "2.0.0-beta.0",
  "description": "Collection of re-usable UI Components for Knapsack and friends",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo storybook/dist",
    "build": "babel --env-name react --config-file @knapsack/babel-config/es --copy-files --source-maps --extensions .tsx,.ts --out-dir dist/ src/",
    "build:storybook": "NODE_ENV=production build-storybook --quiet --config-dir ./storybook --output-dir ./storybook/dist",
    "start:storybook": "start-storybook --port 6006 --config-dir ./storybook",
    "start": "yarn build --watch"
  },
  "dependencies": {
    "@knapsack/core": "^2.0.0-beta.0",
    "@knapsack/utils": "^2.0.0-beta.0",
    "classnames": "^2.2.6",
    "marked": "^0.7.0",
    "prismjs": "^1.15.0",
    "query-string": "^6.1.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-icons": "^3.8.0",
    "react-jsonschema-form": "1.0.7",
    "react-table": "^6.9.0",
    "refractor": "^2.6.2",
    "shortid": "2.2.15"
  },
  "devDependencies": {
    "@knapsack/babel-config": "^2.0.0-beta.0",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-docs": "^5.2.5",
    "@storybook/addon-info": "^5.2.5",
    "@storybook/addon-knobs": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "nodemon": "^1.19.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.0",
    "react-prop-matrix": "^1.0.0",
    "storybook-react-router": "^1.0.8"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "keywords": [
    "design-system",
    "knapsack"
  ],
  "homepage": "https://knapsack.basalt.io",
  "license": "GPL-2.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basaltinc/knapsack.git"
  },
  "bugs": {
    "url": "https://github.com/basaltinc/knapsack/issues"
  }
}
