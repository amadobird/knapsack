{
  "name": "@basalt/knapsack",
  "license": "GPL-2.0-or-later",
  "description": "Build Design Systems on top of knapsack, by Basalt",
  "version": "1.7.1",
  "author": "Basalt (https://basalt.io/)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "knapsack": "cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "npm-run-all --serial --print-label build:server build:client",
    "build:client": "NODE_ENV=production webpack-cli --hide-modules --config ./webpack.config.js",
    "build:server": "BABEL_ENV=cli babel --config-file @knapsack/babel-config --ignore 'src/client' --extensions .js,.ts --out-dir dist/ src/",
    "watch:client": "webpack-cli --config ./webpack.config.js --watch --hide-modules --display minimal",
    "watch:server": "yarn build:server --watch",
    "start": "run-p watch:*"
  },
  "dependencies": {
    "@knapsack/babel-config": "^1.7.1",
    "@knapsack/core": "^1.7.0",
    "@knapsack/schema-utils": "^1.5.2",
    "apollo-boost": "^0.4.4",
    "apollo-server-express": "^2.9.7",
    "body-parser": "1.18.3",
    "chokidar": "^2.0.4",
    "commander": "^2.19.0",
    "express": "4.16.4",
    "fs-extra": "^7.0.0",
    "get-file-sizes": "^1.1.1",
    "globby": "^8.0.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "graphql-type-json": "^0.2.1",
    "gray-matter": "^4.0.1",
    "highlight.js": "^9.12.0",
    "iframe-resizer": "^3.6.1",
    "lowdb": "^1.0.0",
    "marked": "^0.5.2",
    "md5": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "npmlog": "^4.1.2",
    "portfinder": "^1.0.20",
    "qs": "^6.6.0",
    "query-string": "^6.1.0",
    "shortid": "^2.2.14",
    "url-join": "^4.0.0",
    "webpack": "^4.27.1",
    "webpack-manifest-plugin": "^2.0.4",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@basalt/demo-data": "0.5.1",
    "@knapsack/build-tools": "^1.7.1",
    "@knapsack/design-system": "^1.7.1",
