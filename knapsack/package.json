    "react": "^16.8.0",
    "react-apollo": "^2.5.8",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.8.0",
    "react-helmet": "^5.2.0",
    "react-icons": "^3.0.5",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.1.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
