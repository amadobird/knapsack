{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "title": "Button Text"
    },
    "url": {
      "type": "string"
    },
    "size": {
      "type": "string",
      "enum": ["small", "large"]
    },
    "color": {
      "type": "string",
      "title": "BG Color",
      "enum": ["yellow"]
    }
  },
  "required": ["text", "url"]
}
