{# To properly create Component Variations and get correct BEM Modifier classes on, always have a boolean variable instead of variable that's simply `modifier` - those almost always require someone having to double-check stylesheet. #}
{% set classes = [
  'hero',
  'u-full-width',
] | merge(classes|default([])) %}
{# The `merge` allows an array of class names to be added on, the `default` handles times when none is passes so `merge` doesn't fail. #}

<div class="{{ classes|join(' ') }}"{% if image %} style="background-image: url({{ image }});"{% endif %}>

  <div class="hero__inner u-site-container">
    {% if title %}
      <h1 class="hero__title {% if title_classes %}{{ title_classes|join(' ') }}{% endif %}">{{ title }}</h1>
    {% endif %}

    <div class="hero__content {% if content_classes %}{{ content_classes|join(' ') }}{% endif %}">
      {% if body %}
        <div class="hero__body">{{ body|raw }}</div>
      {% endif %}

      {% if buttons %}
        <div class="hero__buttons">
          {% for button in buttons %}
            {% include '@components/_button.twig' with button only %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

</div>

