{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "title": "Hero",
  "properties": {
    "title": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "alignment_all": {
      "type": "string",
      "oneOf": [
        {
          "enum": ["left"],
          "title": "Left Title, Right Content"
        },
        {
          "enum": ["center"],
          "title": "Center Everything",
          "description": "Both title and content will be centered, with title on top of content."
        },
        {
          "enum": ["right"],
          "title": "Right Title, Left Content"
        }
      ]
    },
    "alignment_content": {
      "type": "string",
      "enum": ["top", "middle", "bottom"]
    },
    "image": {
      "type": "string",
      "title": "Background Image",
      "description": "Path to image."
    },
    "content_classes": {
      "type": "array",
      "title": "Content Classes",
      "description": "Used for setting BG and text color."
    },
    "shorter": {
      "type": "boolean",
      "description": "Make the overall hero shorter and more compact"
    },
    "buttons": {
      "type": "array",
      "description": "List of objects passed to `@components/_button.twig`"
    }
  }
}
