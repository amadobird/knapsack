{
  "name": "@basalt/bedrock",
  "private": true,
  "scripts": {
    "build": "FORCE_COLOR=1 run-s --print-label build:*",
    "build:storybook": "cd apps/storybook && yarn build",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "dashboard": "webpack-dashboard",
    "jest": "jest",
    "lerna:publish": "lerna publish --registry https://basalt-npm.now.sh --verify-access",
    "lint:js": "eslint --ext .js,.jsx .",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:style": "stylelint '**/*.{js,jsx}' --syntax scss || echo '@todo fix these stylelint errors and then adjust this script in package.json so it can fail the build again' ",
    "pick": "pick-npm-run-all",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "reset": "yarn clean && yarn install --silent && FORCE_COLOR=1 run-s --print-label build:*",
    "start": "cd apps/storybook && yarn start",
    "test": "run-s lint:style lint:js jest",
    "uuid": "node -e \"process.stdout.write(require('uuid/v4')()) \" | pbcopy && echo 'uuid copied' "
  },
  "workspaces": {
    "packages": [
      "bedrock-site",
      "apps/*",
      "examples/*",
      "components/*",
      "packages/*"
    ],
    "nohoist": [
      "@basalt/bedrock-storybook/babel-core",
      "@basalt/bedrock-storybook/babel-core/**",
      "@basalt/bedrock-storybook/babel-register",
      "@basalt/bedrock-storybook/babel-register/**"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "array-move": "^1.0.0",
    "babel-7-jest": "21.3.3",
    "babel-core": "bridge",
    "babel-plugin-styled-components": "^1.5.1",
    "body-parser": "^1.18.3",
    "chokidar": "^2.0.4",
    "color": "^3.0.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.21.0",
    "eslint-plugin-jsdoc": "3.7.1",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "eslint": "5.3.0",
    "express": "^4.16.3",
    "globby": "^8.0.1",
    "husky": "^0.14.3",
    "iframe-resizer": "^3.6.1",
    "jest": "^23.5.0",
    "lerna": "^3.4.1",
    "lint-staged": "7.2.2",
    "lodash.merge": "^4.6.1",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "pick-npm-run-all": "^0.2.0",
    "prettier": "^1.14.2",
    "pretty": "^2.0.0",
    "prop-types": "^15.6.2",
    "query-string": "^6.1.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dnd": "^5.0.0",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^3.0.5",
    "react-jsonschema-form": "^1.0.3",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^4.3.1",
    "react-router": "^4.3.1",
    "react-table": "^6.8.6",
    "react-test-render": "^1.1.1",
    "react": "^16.4.1",
    "rollup-plugin-analyzer": "^2.0.4",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-execute": "^1.0.0",
    "rollup-plugin-filesize": "^2.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-plugin-url": "^1.4.0",
    "rollup": "^0.62.0",
    "styled-components": "4.0.0-beta.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "stylelint": "^9.5.0",
