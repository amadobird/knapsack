{
  "name": "our-design-system",
  "description": "our-design-system theme",
  "version": "1.2.6",
  "private": true,
  "scripts": {
    "build": "FORCE_COLOR=1 run-p --print-label build:*",
    "build:pl": "gulp pl",
    "build:assets": "NODE_ENV=production gulp assets",
    "build:changelog": "auto-changelog --template json --output ./build/changelog.json || true",
    "build:site": "cd site && yarn build",
    "clean": "rm -rf node_modules build pattern-lab/vendor site/node_modules site/vendor site/public site/public2 site/.cache",
    "deploy": "now deploy --token=$NOW_TOKEN --team basalt && echo ' ' ",
    "deploy:test": "yarn run deploy && now --token=$NOW_TOKEN --team basalt alias crux-test && echo ' ' ",
    "deploy:staging": "yarn run deploy && now --token=$NOW_TOKEN --team basalt alias crux-staging && echo ' ' ",
    "deploy:prod": "yarn run deploy && now --token=$NOW_TOKEN --team basalt alias && echo ' ' ",
    "docker:build": "docker build --tag crux .",
    "docker:run": "docker run --tty --rm crux",
    "fix": "run-s lint:*:fix",
    "lint": "run-s lint:*",
    "lint:pl": "eslint pattern-lab/source/**/*.js",
    "lint:site": "eslint --ext .js,.jsx site",
    "lint:pl:fix": "yarn run lint:pl --fix",
    "lint:site:fix": "yarn run lint:site --fix",
    "lint:style": "stylelint \"pattern-lab/source/**/*.scss\"",
    "setup": "run-p --print-label setup:*",
    "setup:site": "cd site && yarn --silent",
    "setup:sitephp": "cd site && composer install --no-interaction --no-progress --quiet",
    "setup:pl": "cd pattern-lab && composer install --no-interaction --no-progress --quiet",
    "new": "yo pl-pattern --base pattern-lab/source/_patterns",
    "postversion": "git push && git push --tags",
    "prepush": "yarn test",
    "start": "run-p --print-label watch:*",
    "reset": "yarn clean && yarn install --silent && FORCE_COLOR=1 run-s --print-label setup:* build:*",
    "test": "yarn lint",
    "watch:site": "cd site && yarn start",
    "watch:assets": "gulp"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.0-14",
    "@fortawesome/free-solid-svg-icons": "5.1.0-11",
    "@fortawesome/react-fontawesome": "0.1.0-11",
    "@theme-tools/plugin-browser-sync": "^0.4.0",
    "@theme-tools/plugin-icon-font": "^0.4.3",
    "@theme-tools/plugin-pattern-lab-php": "^0.5.0",
    "@theme-tools/plugin-sass": "^0.4.0",
    "@theme-tools/plugin-webpack": "^0.2.2",
    "babel-core": "6.26.3",
    "babel-jest": "23.4.0",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "breakpoint-sass": "^2.7.1",
    "eslint": "5.2.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsdoc": "3.7.1",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "gulp": "gulpjs/gulp#4.0",
    "holderjs": "^2.9.4",
    "jest": "23.4.1",
    "jsonschema": "^1.2.0",
    "prettier": "^1.12.0",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-test-render": "1.1.1",
    "scsstojson": "^1.0.2",
    "stylelint": "9.3.0",
    "stylelint-scss": "1.5.2",
    "webpack": "3.12.0"
  },
  "devDependencies": {
    "auto-changelog": "1.8.0",
    "generator-pl-pattern": "^1.0.0",
    "husky": "0.14.3",
    "npm-run-all": "4.1.3",
    "now": "canary",
    "yo": "1.8.3"
  },
  "repository": "git@bitbucket.org:basaltinc/our-design-system.git"
}
