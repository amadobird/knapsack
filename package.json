{
  "name": "@basalt/bedrock-monorepo",
  "private": true,
  "scripts": {
    "build": "FORCE_COLOR=1 lerna run build",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "dashboard": "webpack-dashboard",
    "jest": "jest",
    "lerna:publish": "lerna publish --registry https://basalt-npm.now.sh --verify-access",
    "lint:js": "eslint --ext .js,.jsx .",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:style": "stylelint '**/*.{js,jsx}' --syntax scss || echo '@todo fix these stylelint errors and then adjust this script in package.json so it can fail the build again' ",
    "open:prs": "open https://bitbucket.org/basaltinc/bedrock/pull-requests/",
    "open:pr": "open https://bitbucket.org/basaltinc/bedrock/pull-requests/new",
    "open:repo": "open https://bitbucket.org/basaltinc/bedrock",
    "open:ci": "open https://bitbucket.org/basaltinc/bedrock/addon/pipelines/home",
    "pick": "pick-npm-run-all",
    "postversion": "git push && git push --tags",
    "reset": "yarn clean && yarn install --silent && FORCE_COLOR=1 run-s --print-label build:*",
    "start": "cd apps/storybook && yarn start",
    "test": "run-s lint:style lint:js jest",
    "uuid": "node -e \"process.stdout.write(require('uuid/v4')()) \" | pbcopy && echo 'uuid copied' "
  },
  "workspaces": {
    "packages": [
      "bedrock",
      "apps/*",
      "examples/*",
      "components/*",
      "packages/*"
    ],
    "nohoist": [
      "@basalt/bedrock-storybook/babel-core",
      "@basalt/bedrock-storybook/babel-core/**",
      "@basalt/bedrock-storybook/babel-register",
      "@basalt/bedrock-storybook/babel-register/**"
    ]
  },
  "devDependencies": {
    "color": "^3.0.0",
    "husky": "^1.1.3",
    "jest": "^23.5.0",
    "lerna": "^3.4.1",
    "lint-staged": "7.2.2",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "pick-npm-run-all": "^0.2.0",
    "rollup": "^0.62.0",
    "rollup-plugin-analyzer": "^2.0.4",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-execute": "^1.0.0",
    "rollup-plugin-filesize": "^2.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-plugin-url": "^1.4.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "typescript": "^3.1.3"
  },
  "repository": "git@bitbucket.org:basaltinc/our-design-system.git"
}
