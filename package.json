{
  "name": "our-design-system",
  "description": "our-design-system theme",
  "version": "1.2.6",
  "private": true,
  "scripts": {
    "build": "FORCE_COLOR=1 run-s --print-label build:*",
    "build:assets": "cd crux-assets && yarn run build",
    "build:changelog": "auto-changelog --template json --output ./crux-assets/dist/changelog.json || true",
    "build:crux-site": "cd crux-site && yarn build",
    "build:storybook": "cd bedrock/apps/storybook && yarn build",
    "clean": "lerna clean --yes && rm -rf node_modules crux-assets/dist",
    "dashboard": "webpack-dashboard",
    "deploy": "now deploy --token=$NOW_TOKEN --team basalt && echo ' ' ",
    "deploy:prod": "yarn run deploy && now --token=$NOW_TOKEN --team basalt alias && echo ' ' ",
    "deploy:staging": "yarn run deploy && now --token=$NOW_TOKEN --team basalt alias crux-staging && echo ' ' ",
    "deploy:test": "yarn run deploy && now --token=$NOW_TOKEN --team basalt alias crux-test && echo ' ' ",
    "docker:build": "docker build --tag crux .",
    "docker:run": "docker run --tty --rm crux",
    "jest": "jest",
    "lint:js": "eslint --ext .js,.jsx .",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:style": "stylelint './bedrock/**/*.jsx' './site/**/*.jsx' --syntax scss",
    "pick": "pick-npm-run-all",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged || true",
    "prepush": "yarn test",
    "reset": "yarn clean && yarn install --silent && FORCE_COLOR=1 run-s --print-label build:*",
    "start": "pick-npm-run-all start:",
    "start:assets": "cd crux-assets && yarn start",
    "start:crux-site": "cd crux-site && yarn start",
    "start:storybook": "cd bedrock/apps/storybook && yarn start",
    "test": "run-s lint:style lint:js jest"
  },
  "workspaces": {
    "packages": [
      "bedrock",
      "bedrock/apps/*",
      "bedrock/components/*",
      "bedrock/packages/*",
      "crux-assets",
      "crux-site",
      "site"
    ],
    "nohoist": [
      "@basalt/bedrock-storybook/babel-core",
      "@basalt/bedrock-storybook/babel-core/**",
      "@basalt/bedrock-storybook/babel-register",
      "@basalt/bedrock-storybook/babel-register/**"
    ]
  },
  "devDependencies": {
    "array-move": "^1.0.0",
    "auto-changelog": "^1.8.0",
    "babel-core": "bridge",
    "body-parser": "^1.18.3",
    "chokidar": "^2.0.4",
    "classnames": "^2.2.6",
    "color": "^3.0.0",
    "express": "^4.16.3",
    "globby": "^8.0.1",
    "husky": "^0.14.3",
    "iframe-resizer": "^3.6.1",
    "jest": "^23.5.0",
    "lerna": "^3.0.5",
    "lint-staged": "^7.2.2",
    "lodash.merge": "^4.6.1",
    "nodemon": "^1.18.3",
    "now": "canary",
    "npm-run-all": "^4.1.3",
    "pick-npm-run-all": "^0.2.0",
    "prettier": "^1.14.2",
    "pretty": "^2.0.0",
    "prop-types": "^15.6.2",
    "query-string": "^6.1.0",
    "react": "^16.4.1",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^3.0.5",
    "react-jsonschema-form": "^1.0.3",
    "react-loadable": "^5.5.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-table": "^6.8.6",
    "react-test-render": "^1.1.1",
    "styled-components": "4.0.0-beta.1",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "uuid": "^3.3.2",
    "ws": "^6.0.0"
  },
  "repository": "git@bitbucket.org:basaltinc/our-design-system.git"
}
