{
  "name": "our-design-system",
  "description": "our-design-system theme",
  "version": "1.2.6",
  "private": true,
  "scripts": {
    "start": "gulp",
    "build": "npm run compile",
    "compile": "NODE_ENV=production gulp compile && npm run gatsby:compile",
    "gatsby:compile": "cd site && npm run build",
    "test": "gulp validate && npm run lint:js",
    "gulp": "gulp",
    "setup": "./setup.sh && cd site && yarn install",
    "deploy": "now deploy --token=$NOW_TOKEN --team basalt --debug",
    "reset": "rm -rf node_modules build pattern-lab/vendor site/node_modules site/vendor site/public site/public2 site/.cache && yarn && npm run setup",
    "new": "yo pl-pattern --base pattern-lab/source/_patterns",
    "preinstall": "npm run setup",
    "postinstall": "npm run compile && npm run changelog",
    "changelog": "auto-changelog --template json --output ./build/changelog.json",
    "prepush": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint pattern-lab/source/**/*.js && cd site && npm run lint",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:scss": "stylelint \"pattern-lab/source/**/*.scss\"",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@theme-tools/plugin-browser-sync": "^0.4.0",
    "@theme-tools/plugin-icon-font": "^0.4.3",
    "@theme-tools/plugin-pattern-lab-php": "^0.5.0",
    "@theme-tools/plugin-sass": "^0.4.0",
    "@theme-tools/plugin-webpack": "^0.2.2",
    "babel-core": "6.26.3",
    "babel-jest": "23.4.0",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "breakpoint-sass": "^2.7.1",
    "eslint": "5.2.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsdoc": "3.7.1",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "gulp": "gulpjs/gulp#4.0",
    "holderjs": "^2.9.4",
    "jest": "23.4.1",
    "jsonschema": "^1.2.0",
    "prettier": "^1.12.0",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-test-render": "1.1.1",
    "scsstojson": "^1.0.2",
    "stylelint": "9.3.0",
    "stylelint-scss": "1.5.2",
    "webpack": "3.12.0"
  },
  "devDependencies": {
    "auto-changelog": "1.8.0",
    "generator-pl-pattern": "^1.0.0",
    "husky": "0.14.3",
    "now": "canary",
    "yo": "1.8.3"
  },
  "repository": "git@bitbucket.org:basaltinc/our-design-system.git"
}
