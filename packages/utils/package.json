{
  "name": "@knapsack/utils",
  "license": "GPL-2.0-or-later",
  "version": "1.5.1",
  "description": "A Knapsack component that helps build Design Systems",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build:js": "babel --config-file @knapsack/babel-config/es --source-maps --ignore 'src/*.test.js' --extensions .js,.ts --out-dir dist/ src/",
    "build:types": "tsc",
    "build": "rm -rf dist && yarn build:js",
    "prepublishOnly": "npm run build",
    "watch": "yarn build --watch"
  },
  "dependencies": {
    "@knapsack/core": "^1.5.1",
    "color": "^3.0.0"
  },
  "devDependencies": {
    "@knapsack/babel-config": "^1.0.0"
  },
  "author": "Basalt (https://basalt.io/)",
  "publishConfig": {
    "access": "public"
  }
}
